
<div class="row py-5">
   <div class="col-lg-4 mx-auto">
        <section class="d-flex justify-content-center mt-5 mb-5">
          <span class="text-capitalize text-white bg-dark px-2 py-1 rounded">
            <%=resource_name%> Log in
          </span>
        </section>
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mt-5">
    <%= f.text_field :login, autofocus: true, placeholder:"Username or Email" , class:"form-control py-2"%>
  </div>
  <div class="field mt-3">
    <%= f.password_field :password, autocomplete: "current-password" ,placeholder:"Current password" , class:"form-control py-2"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field d-flex justify-content-center mt-3 mb-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"ms-2"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class:"form-control py-2 btn btn-primary fw-bold shadow" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>